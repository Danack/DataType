<?xml version="1.0"?>
<psalm
        totallyTyped="true"
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        errorBaseline="psalm-baseline.xml">

    <issueHandlers>
        <MixedAssignment errorLevel="suppress"/>
        <!-- TODO - this needs to be re-enabled -->
        <PossiblyInvalidArgument>
            <errorLevel type="suppress">
                <directory name="*"/>
            </errorLevel>
        </PossiblyInvalidArgument>


        <!-- TODO - this needs to be re-enabled -->
        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
            </errorLevel>
        </MixedArgument>


        <!-- TODO - find a better way of handling this. Or rewrite PHP preg functions. -->
        <MixedArrayAccess>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/ProcessRule/SaneCharacters.php"/>
            </errorLevel>
        </MixedArrayAccess>


        <!-- TODO - this needs to be re-enabled -->
        <InvalidReturnStatement>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/OpenApi/OpenApiV300ParamDescription.php" />
            </errorLevel>
        </InvalidReturnStatement>

        <!-- TODO - this needs to be re-enabled -->
        <InvalidReturnType>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/OpenApi/OpenApiV300ParamDescription.php" />
            </errorLevel>
        </InvalidReturnType>

        <!-- TODO - this needs to be re-enabled -->
        <MixedArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/ProcessRule/CheckOnlyAllowedCharacters.php"/>
            </errorLevel>
        </MixedArgumentTypeCoercion>

        <!-- TODO - this needs to be re-enabled -->
        <MixedReturnStatement>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/Value/Ordering.php"/>
            </errorLevel>
        </MixedReturnStatement>

        <!-- TODO - this needs to be re-enabled -->
        <MixedInferredReturnType>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/Value/Ordering.php"/>
            </errorLevel>
        </MixedInferredReturnType>


        <!-- TODO - this needs to be re-enabled -->
        <MixedOperand>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
            </errorLevel>
        </MixedOperand>

        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/DataStorage/ArrayDataStorage.php"/>
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/ProcessRule/SaneCharacters.php"/>
                <file name="src/TypeSpec/ProcessRule/CheckOnlyAllowedCharacters.php"/>
            </errorLevel>
        </MixedArgument>

        <MixedArrayAccess>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/functions.php"/>
                <file name="src/TypeSpec/ProcessRule/SaneCharacters.php"/>
                <file name="src/TypeSpec/ProcessRule/CheckOnlyAllowedCharacters.php"/>
            </errorLevel>
        </MixedArrayAccess>

        <UndefinedInterfaceMethod>
            <errorLevel type="suppress">
                <file name="src/TypeSpec/ProcessRule/EarlierThanParam.php"/>
                <file name="src/TypeSpec/ProcessRule/LaterThanParam.php"/>
            </errorLevel>
        </UndefinedInterfaceMethod>

        <RedundantConditionGivenDocblockType>
            <!-- psalm I have no idea why this is a problem -->
            <errorLevel type="suppress">
                <file name="src/TypeSpec/ExtractRule/GetDatetime.php"/>
            </errorLevel>
        </RedundantConditionGivenDocblockType>

        <DocblockTypeContradiction>
            <!-- psalm I have no idea why this is a problem -->
            <errorLevel type="suppress">
                <file name="src/TypeSpec/ExtractRule/GetDatetime.php"/>
                <file name="src/TypeSpec/ValidationResult.php"/>
            </errorLevel>
        </DocblockTypeContradiction>
    </issueHandlers>

    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
</psalm>
