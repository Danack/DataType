includes:
  - vendor/phpstan/phpstan-strict-rules/rules.neon
parameters:
  editorUrl: 'phpstorm://open?file=/Users/danack/projects/github/DataType/%%relFile%%&line=%%line%%'
  level: 10
  treatPhpDocTypesAsCertain: false
  excludePaths:
    - *GetArticlesParams*
    - *CreateFromVarMap*
  ignoreErrors:
    -
      identifier: trait.unused
      paths:
        - src/*
    -
      identifier: missingType.return
      paths:
        - test/*
    -
      identifier: staticMethod.dynamicCall
      paths:
        - test/*
    -
      identifier: missingType.property
      paths:
        - test/*
    # Ignore all errors in fixtures.php - it contains intentional errors for testing
    -
      message: '#.*#'
      paths:
        - test/fixtures.php
    # ArrayDataStorage: $data becomes mixed after $data = $data[$key]; internal-only, TODO refactor
    -
      identifier: argument.type
      paths:
        - src/DataType/DataStorage/ArrayDataStorage.php
    # MaxFloatValue: process() $value is mixed; floatval() expects narrower type. Internal-only, TODO refactor/type
    -
      identifier: argument.type
      paths:
        - src/DataType/ProcessRule/MaxFloatValue.php
    # MaxIntValue: process() $value is mixed; intval() expects narrower type. Internal-only, TODO refactor/type
    -
      identifier: argument.type
      paths:
        - src/DataType/ProcessRule/MaxIntValue.php
    # MinFloatValue: process() $value is mixed; floatval() expects narrower type. Internal-only, TODO refactor/type
    -
      identifier: argument.type
      paths:
        - src/DataType/ProcessRule/MinFloatValue.php
    # MinIntValue: process() $value is mixed; intval() expects narrower type. Internal-only, TODO refactor/type
    -
      identifier: argument.type
      paths:
        - src/DataType/ProcessRule/MinIntValue.php
    # PositiveInt: process() $value is mixed; check_only_digits/intval() expect narrower type. Internal-only, TODO refactor/type
    -
      identifier: argument.type
      paths:
        - src/DataType/ProcessRule/PositiveInt.php
    