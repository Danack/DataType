{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "TypeSpec/DataStorage/TestArrayDataStorage.php",
            "TypeSpec/SafeAccess.php",
            "TypeSpec/OpenApi/ShouldNeverBeCalledParamDescription.php",
            "TypeSpec/OpenApi/OpenApiV300ParamDescription.php"
        ]
    },
    "minMsi": 100,
    "minCoveredMsi": 100,
    "phpUnit": {
        "configDir": "./test"
    },
    "logs": {
        "text": "infection.log"
    },
    "mutators": {
        "@default": true,
        "MBString": false,
        "PublicVisibility": false,
        "ProtectedVisibility": false,
        "CastString": {
            "ignore": [
                "TypeSpec\\DataStorage\\ArrayDataStorage::moveKey",
            ],
        },
        "FalseValue": {
            "ignore": [
                "*::updateParamDescription",
                "TypeSpec\\OpenApi\\ShouldNeverBeCalledParamDescription::*",
                "TypeSpec\\ProcessRule\\SaneCharacters::process",
                "TypeSpec\\ProcessRule\\CheckOnlyAllowedCharacters::process"
            ]
        },
        "IncrementInteger": {
            "ignore": [
                "TypeSpec\\ProcessRule\\SaneCharacters::process"
            ]
        },
        "Identical": {
            "ignore": [
                "TypeSpec\\OpenApi\\ShouldNeverBeCalledParamDescription::*",
                "TypeSpec\\ProcessRule\\SaneCharacters::process",
                "TypeSpec\\ProcessRule\\CheckOnlyAllowedCharacters::process"
            ]
        },
        "MethodCallRemoval": {
            "ignore": [
                "*::updateParamDescription",
            ]
        },
        "SpreadOneItem": {
            // There are parts of the code that merge multiple validation problems into
            // one list. But currently the validation stops on first error, so testing it
            // is hard.
            "ignore": [
                "TypeSpec\\ExtractRule\'GetArrayOfInt::process",
            ]
        },
        "Throw_": {
            "ignore": [
                "TypeSpec\\OpenApi\\OpenApiV300ParamDescription::*",
                "TypeSpec\\OpenApi\\ShouldNeverBeCalledParamDescription::*",
                "TypeSpec\\ProcessRule\\SaneCharacters::process",
                "TypeSpec\\ProcessRule\\CheckOnlyAllowedCharacters::process"
            ]
        },
    }
}